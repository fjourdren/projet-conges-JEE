<web-app>
    <display-name>dayoff_manager</display-name>

    <servlet>
        <servlet-name>defaultPage</servlet-name>
        <display-name>defaultPage</display-name>
        <description></description>
        <servlet-class>fr.enssat.dayoff_manager.servlets.DefaultPage</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <display-name>loginServlet</display-name>
        <description></description>
        <servlet-class>fr.enssat.dayoff_manager.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <display-name>logoutServlet</display-name>
        <description></description>
        <servlet-class>fr.enssat.dayoff_manager.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
    	<servlet-name>employeesServlet</servlet-name>
    	<display-name>employeesServlet</display-name>
    	<description></description>
    	<servlet-class>fr.enssat.dayoff_manager.servlets.employees.EmployeesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditEmployeeServlet</servlet-name>
        <display-name>EditEmployeeServlet</display-name>
        <servlet-class>fr.enssat.dayoff_manager.servlets.employees.EditEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>DeleteEmployeeServlet</servlet-name>
    	<display-name>DeleteEmployeeServlet</display-name>
    	<description></description>
    	<servlet-class>fr.enssat.dayoff_manager.servlets.employees.DeleteEmployeeServlet</servlet-class>
    </servlet>



    <servlet-mapping>
        <servlet-name>EditEmployeeServlet</servlet-name>
        <url-pattern>/employees/edit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>defaultPage</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>defaultPage</servlet-name>
        <url-pattern>/default</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    
    <servlet-mapping>
        <servlet-name>employeesServlet</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditEmployeeServlet</servlet-name>
        <url-pattern>/employees-add-edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>DeleteEmployeeServlet</servlet-name>
    	<url-pattern>/employees-delete</url-pattern>
    </servlet-mapping>



    <servlet>
        <display-name>TestDAOServlet</display-name>
        <servlet-name>TestDAOServlet</servlet-name>
        <servlet-class>fr.enssat.dayoff_manager.servlets.TestDAOServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestDAOServlet</servlet-name>
        <url-pattern>/TestDAOServlet</url-pattern>
    </servlet-mapping>




